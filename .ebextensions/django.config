option_settings:
    aws:elasticbeanstalk:container:python:
        WSGIPath: mikebozee/wsgi.py

container_commands:
    01_collectstatic:
        command: "source /opt/python/run/venv/bin/activate && python mikebozee/manage.py collectstatic --noinput"
    02_syncdb:
        command: "source /opt/python/run/venv/bin/activate && python mikebozee/manage.py syncdb --noinput"
        leader_only: true
    03_migrate:
        command: "source /opt/python/run/venv/bin/activate && python mikebozee/manage.py migrate --noinput"
        leader_only: true